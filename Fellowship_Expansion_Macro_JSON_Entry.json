{
  "name": "Fellowship Expansion With Lore Context",
  "id": "fellowship-expansion-lore-context",
  "type": "macro",
  "command": true,
  "steps": [
    {
      "type": "CaptureValue",
      "id": "seed_text",
      "name": "seed_text",
      "valueType": "Text",
      "prompt": "Enter or paste seed text to expand:"
    },
    {
      "type": "ReadFileContent",
      "id": "Greater_Deities",
      "name": "Greater_Deities",
      "filePath": "Lore/Greater_Deities.md"
    },
    {
      "type": "ReadFileContent",
      "id": "Lesser_Deities",
      "name": "Lesser_Deities",
      "filePath": "Lore/Lesser_Deities.md"
    },
    {
      "type": "ReadFileContent",
      "id": "Elemental_Deities",
      "name": "Elemental_Deities",
      "filePath": "Lore/Elemental_Deities.md"
    },
    {
      "type": "ReadFileContent",
      "id": "Lower_Planes_Deities",
      "name": "Lower_Planes_Deities",
      "filePath": "Lore/Lower_Planes_Deities.md"
    },
    {
      "type": "ReadFileContent",
      "id": "Symbols",
      "name": "Symbols",
      "filePath": "Lore/Symbols.md"
    },
    {
      "type": "ReadFileContent",
      "id": "Granted_Powers",
      "name": "Granted_Powers",
      "filePath": "Lore/Granted_Powers.md"
    },
    {
      "type": "ReadFileContent",
      "id": "Malkoros_Calendar",
      "name": "Malkoros_Calendar",
      "filePath": "Lore/Malkoros_Calendar.md"
    },
    {
      "type": "ReadFileContent",
      "id": "Fellowships",
      "name": "Fellowships",
      "filePath": "Lore/Fellowships.md"
    },
    {
      "type": "ReadFileContent",
      "id": "Timeline",
      "name": "Timeline",
      "filePath": "Lore/Timeline.md"
    },
    {
      "type": "ReadFileContent",
      "id": "Lore_Summary",
      "name": "Lore_Summary",
      "filePath": "Lore/Lore_Summary.md"
    },
    {
      "type": "ReadFileContent",
      "id": "Pantheon_Structure",
      "name": "Pantheon_Structure",
      "filePath": "Lore/Pantheon_Structure.md"
    },
    {
      "type": "AIAssistantPromptTemplate",
      "templatePath": "Templates/QuickAdd/LoreExpanderPrompt.md",
      "variables": {
        "seed_text": "seed_text",
        "Greater_Deities": "Greater_Deities",
        "Lesser_Deities": "Lesser_Deities",
        "Elemental_Deities": "Elemental_Deities",
        "Lower_Planes_Deities": "Lower_Planes_Deities",
        "Symbols": "Symbols",
        "Granted_Powers": "Granted_Powers",
        "Malkoros_Calendar": "Malkoros_Calendar",
        "Fellowships": "Fellowships",
        "Timeline": "Timeline",
        "Lore_Summary": "Lore_Summary",
        "Pantheon_Structure": "Pantheon_Structure"
      },
      "storeResult": "ai_output"
    },
    {
      "type": "InsertText",
      "text": "{{VALUE:ai_output}}"
    }
  ]
}